{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    ":disableRateLimiting"
  ],
  "schedule": [
    "every day"
  ],
  "commitMessagePrefix": "chore(deps): ",
  "prHeader": "â¬†Dependency Update",
  "prFooter": "This PR has been generated by Renovate Bot. For more information, see the [Renovate Docs](https://docs.renovatebot.com/).",
  "packageRules": [
    {
      "matchUpdateTypes": [
        "major",
        "minor",
        "patch",
        "pin",
        "digest"
      ],
      "matchCurrentVersion": "!/^0/",
      "automerge": true,
      "automergeType": "pr"
    },
    {
      "matchPackagePatterns": [
        "^github.com/gin-gonic/"
      ],
      "groupName": "Gin framework"
    },
    {
      "matchPackagePatterns": [
        "^google.golang.org/grpc"
      ],
      "groupName": "gRPC"
    }
  ],
  "go": {
    "gomodTidy": "all"
  },
  "docker": {
    "pinDigests": true
  },
  ":maintainLockFiles": {
    "enabled": true
  },
  "labels": [
    "dependencies"
  ]
}
